<?xml version='1.0' encoding='utf-8'?>
<widget id="info.jasonbeck" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Morse2Go</name>
    <description>
        Morse Code application built from Mor.js and ResponsiveVoice JS v1.5.1.  Inspired by work Jim Wroten at http://morse2go.org/.
    </description>
    <author email="jason@adapativedesign.org" href="http://www.adaptivedesign.org">
        Adaptive Design Associaiton
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xff0000ff"/>
    <preference name="Orientation" value="landscape" />
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon.png" width="60" height="60" />
        <icon src="res/ios/icon.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/icon.png" width="76" height="76" />
        <icon src="res/ios/icon.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/icon.png" width="40" height="40" />
        <icon src="res/ios/icon.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon.png" width="57" height="57" />
        <icon src="res/ios/icon.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/icon.png" width="72" height="72" />
        <icon src="res/ios/icon.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon.png" width="29" height="29" />
        <icon src="res/ios/icon.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/icon.png" width="50" height="50" />
        <icon src="res/ios/icon.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/ios/icon.png" width="167" height="167" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.3.1" />
</widget>
